pkgname=xconnect
pkgver=1.4.2
pkgrel=0
epoch=
pkgdesc=""
arch=('x86_64')
url=""
license=('AGPL-3.0')
groups=()
depends=('gtk3' 'xdotool' 'libxcb' 'libxfixes' 'alsa-lib' 'libva' 'libappindicator-gtk3' 'pam' 'gst-plugins-base' 'gst-plugin-pipewire')
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=pacman_install
changelog=
noextract=()
md5sums=() #generate with 'makepkg -g'

package() {
  if [[ ${FLUTTER} ]]; then
	  mkdir -p "${pkgdir}/usr/share/xconnect" && cp -r ${HBB}/flutter/build/linux/x64/release/bundle/* -t "${pkgdir}/usr/share/xconnect"
  fi
  mkdir -p "${pkgdir}/usr/bin"
  pushd ${pkgdir} && ln -s /usr/share/xconnect/xconnect usr/bin/xconnect && popd
  install -Dm 644 $HBB/res/xconnect.service -t "${pkgdir}/usr/share/xconnect/files"
  install -Dm 644 $HBB/res/xconnect.desktop -t "${pkgdir}/usr/share/xconnect/files"
  install -Dm 644 $HBB/res/xconnect-link.desktop -t "${pkgdir}/usr/share/xconnect/files"
  install -Dm 644 $HBB/res/128x128@2x.png "${pkgdir}/usr/share/icons/hicolor/256x256/apps/xconnect.png"
  install -Dm 644 $HBB/res/scalable.svg "${pkgdir}/usr/share/icons/hicolor/scalable/apps/xconnect.svg"
  install -Dm 644 $HBB/res/xconnect.desktop -t "${pkgdir}/etc/xdg/autostart"
}
